<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.deborahho"
    android:versionCode="5"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />
    
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_DATA" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="edu.neu.madcourse.gcmdemo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="edu.neu.madcourse.gcmdemo.permission.C2D_MESSAGE" />
    
    <application
        android:icon="@drawable/bunny_toothbrush"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.neu.madcourse.deborahho.MainActivity"
            android:label="@string/main_title" >
            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.neu.madcourse.deborahho.About"
            android:label="@string/about_title"
            android:theme="@style/AppTheme" >
            
        </activity>
        
        <activity android:name="edu.neu.madcourse.deborahho.sudoku.Prefs"
            android:label="@string/sudoku_settings_title">
        </activity>
        <activity android:name="edu.neu.madcourse.deborahho.sudoku.Game"
			android:label="@string/game_title" />
        <activity android:name="edu.neu.madcourse.deborahho.sudoku.Sudoku"
            android:label="@string/sudoku_label"/>
        <activity android:name="edu.neu.madcourse.deborahho.sudoku.SudokuAbout"
            android:label="@string/sudoku_about_title"
            android:theme="@android:style/Theme.Dialog" />
        
 		<activity android:name="edu.neu.madcourse.deborahho.dictionary.Dictionary"
 		    android:label="@string/test_dictionary_label"
 		    android:screenOrientation="portrait" />
 		<activity android:name="edu.neu.madcourse.deborahho.dictionary.DictAcknowledgements"
 		    android:label="@string/acknowledgements_label" />
 		
 		<activity android:name="edu.neu.madcourse.deborahho.bananagrams.Bananagrams"
 		    android:label="@string/bananagrams_label" 
 		    android:screenOrientation="portrait" />
 		<activity android:name="edu.neu.madcourse.deborahho.bananagrams.BananaGame"
 		    android:label="@string/bananagrams_label" 
 		    android:screenOrientation="portrait" />
 		<activity android:name="edu.neu.madcourse.deborahho.bananagrams.BananaAcknowledgements"
 		    android:label="@string/acknowledgements_label" />
 		<activity android:name="edu.neu.madcourse.deborahho.bananagrams.Prefs"
 		    android:label="@string/game_title" />
 		<activity android:name="edu.neu.madcourse.deborahho.bananagrams.BananaInstructions"
            android:label="@string/instructions_label"
            android:theme="@android:style/Theme.Dialog" />
 		<activity android:name="edu.neu.madcourse.deborahho.bananagrams.BananaPause"
 		    android:label="@string/pause_label" />
 		
 		<activity android:name="edu.neu.madcourse.deborahho.communication.Communication"
 		    android:label="@string/communication_label" />
 		
		<receiver
            android:name="edu.neu.madcourse.deborahho.communication.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="edu.neu.madcourse.deborahho.communication" />
            </intent-filter>
        </receiver>

        <service android:name="edu.neu.madcourse.deborahho.communication.GcmIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
 		
    </application>

</manifest>
