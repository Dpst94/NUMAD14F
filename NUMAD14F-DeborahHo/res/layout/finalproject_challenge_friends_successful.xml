<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/succesfully_challenged_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="You've successfully challenged Krish!"
        android:textSize="24dp" />
    
    <Button
        android:id="@+id/finalproject_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/next_label" />

    <Button
        android:id="@+id/send_audio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/succesfully_challenged_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:gravity="center"
        android:text="@string/send_audio_label" />

</RelativeLayout>
