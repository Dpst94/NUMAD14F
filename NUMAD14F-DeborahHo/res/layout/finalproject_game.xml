<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/crunchy_current_day"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center|center_horizontal"
            android:textSize="35sp" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="40dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/crunchy_nr_of_crunches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center"
        android:textSize="24sp" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/crunchy_countdown_crunches"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="24dp"
        android:background="#c0c0c0" />

    <Button
        android:id="@+id/finalproject_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/back_label" />

    <Button
        android:id="@+id/finalproject_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/menu_label" />

    <TextView
        android:id="@+id/crunchy_countdown_crunches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/finalproject_back_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/finalproject_back_button"
        android:layout_alignParentLeft="true"
        android:background="#c0c0c0" />

    <ImageView
        android:id="@+id/crunch_sketch"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view2"
        android:src="@drawable/crunch_sketch" />
    <!-- Camera Layout -->

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </FrameLayout>

</RelativeLayout>