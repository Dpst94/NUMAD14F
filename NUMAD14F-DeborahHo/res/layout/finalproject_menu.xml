<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/finalproject_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/back_label" />

    <Button
        android:id="@+id/check_schedule_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/finalproject_back_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:text="@string/check_schedule_label" />

    <Button
        android:id="@+id/team_up_friends_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_schedule_button"
        android:layout_alignParentLeft="true"
        android:text="@string/team_up_friends_label" />

    <Button
        android:id="@+id/view_scores_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/team_up_friends_button"
        android:layout_alignParentLeft="true"
        android:text="@string/view_scores_label" />

    <Button
        android:id="@+id/challenge_friends_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_scores_button"
        android:layout_alignParentLeft="true"
        android:text="@string/challenge_friends_label" />

    <Button
        android:id="@+id/share_facebook_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/challenge_friends_button"
        android:layout_alignParentLeft="true"
        android:text="@string/share_facebook_label" />

    <TextView
        android:id="@+id/crunchy_completed_workout_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/crunchy_current_day"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="You have completed your work-out for today!"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/crunchy_current_day"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Day 01"
        android:textSize="35dp" />

</RelativeLayout>
