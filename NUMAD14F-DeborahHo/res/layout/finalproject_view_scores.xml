<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <TextView 
        android:id="@+id/text_scores"
        android:layout_above="@+id/listview_scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Click on the username to see pictures"/>
        
    <ListView
        android:id="@+id/listview_scores"
        android:layout_above="@+id/finalproject_back_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"> 
    </ListView>

    <Button
        android:id="@+id/finalproject_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/back_label" />
    
</RelativeLayout>